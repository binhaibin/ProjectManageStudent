@model Account

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
</head>
<body>
    <div class="row">
        <div class="col-md-12">
            <form asp-action="AddMark2">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group ">
                    <input type="hidden" class="form-control" name="AccountId" value="@Model.Id" />
                </div>
                <div class="form-group col-md-2">
                    <label class="control-label"></label>
                    <select name="SubjectId" style="margin-top: 2%" class="form-control" asp-items="ViewBag.Subject"></select>
                </div>
                <div class="form-group col-md-2">
                    <label class="control-label">Theory</label>
                    <input type="text" class="form-control" name="Theory" />
                </div>
                <div class="form-group col-md-2">
                    <label class="control-label">Practice</label>
                    <input type="text" class="form-control" name="Practice" />
                </div>
                <div class="form-group col-md-2" >
                    <label class="control-label">Assignment</label>
                    <input type="text" class="form-control" name="Assignment"  />
                </div>
                <div class="form-group col-md-2">
                    <input type="submit" style="margin-top: 15%"  value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
</body>
</html>